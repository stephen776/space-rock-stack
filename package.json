{
  "private": true,
  "sideEffects": false,
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "scripts": {
    "build": "remix build",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:remix": "remix dev",
    "dev:css": "npm run generate:css -- --watch",
    "generate:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/app.css",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "prepare": "husky install",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc --noEmit",
    "validate": "run-p format lint typecheck"
  },
  "dependencies": {
    "@prisma/client": "^4.7.0",
    "@remix-run/node": "^1.7.6",
    "@remix-run/react": "^1.7.6",
    "@remix-run/vercel": "^1.7.6",
    "@remix-validated-form/with-zod": "^2.0.5",
    "@vercel/node": "^2.7.0",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "isbot": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-flat-routes": "^0.4.8",
    "remix-typedjson": "^0.1.6",
    "remix-utils": "^4.2.1",
    "remix-validated-form": "^4.6.5",
    "tailwind-merge": "^1.8.0",
    "tailwindcss-radix": "^2.6.1",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.19.1",
    "zod-form-data": "^1.2.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.6",
    "@remix-run/eslint-config": "^1.7.6",
    "@remix-run/serve": "^1.7.6",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "esbuild-register": "^3.4.1",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.0",
    "prettier-plugin-tailwindcss": "^0.2.0",
    "prisma": "^4.7.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4",
    "wrangler": "^2.2.1"
  },
  "engines": {
    "node": ">=16.13"
  }
}
