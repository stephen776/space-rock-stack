{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev:css": "npm run generate:css -- --watch",
    "dev": "remix build && run-p \"dev:*\"",
    "generate:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/app.css",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "prepare": "husky install",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc --noEmit",
    "validate": "run-p format lint typecheck"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.7.6",
    "@remix-run/cloudflare-pages": "^1.7.6",
    "@remix-run/react": "^1.7.6",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix-typedjson": "^0.1.6",
    "tailwind-merge": "^1.8.0",
    "tailwindcss-radix": "^2.6.1",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.18.0",
    "@remix-run/dev": "^1.7.6",
    "@remix-run/eslint-config": "^1.7.6",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.18",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.0",
    "prettier-plugin-tailwindcss": "^0.2.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4",
    "wrangler": "^2.2.1"
  },
  "engines": {
    "node": ">=16.13"
  }
}
